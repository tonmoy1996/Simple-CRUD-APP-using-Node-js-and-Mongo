<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('head.ejs') %>
    <link rel="stylesheet" href="/css/style.css">

</head>
<body class="container">
    <header>
        <%- include('header.ejs') %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>This is great</h1>
            <a href="/articles/add"  class="btn btn-primary m-2 sm-2">Add New Article</a>
        </div>
    </main>
    
        <h1>Articles</h1>
        <ul class="list-group"  >
             <% articles.forEach(function(article) { %>

            <li class="list-group-item"><%= article.title %> </li>
            <li class="list-group-item" ><%= article.author %> </li>
            <li class="list-group-item" ><%= article.body %> </li>
            <div  class="lg-12 m-2">
                <a href="/articles/edit/<%= article._id %>" class="btn btn-primary"> Edit</a>
                <a href="/articles/detail/<%= article._id %>" class="btn btn-secondary"> Details</a>
                <a href="/articles/delete/<%= article._id %>" id="delete-article"  class="btn btn-danger">Delete</a>
            </div>
            <br/><br/>
         <% }); %>
        </ul>
        <button class="btn btn-primary">Save</button>
       
 
        <footer>
            <%- include('footer.ejs') %>
        </footer>



</body>
</html>